FROM ubuntu:xenial

RUN \
  apt-get update && apt-get upgrade -q -y && \
  apt-get install -y --no-install-recommends golang git make gcc libc-dev ca-certificates && \
  git clone --depth 1 --branch release/1.5 https://github.com/ContractNet/go-ContractNet && \
  (cd go-ContractNet && make gContractNet) && \
  cp go-ContractNet/build/bin/gContractNet /gContractNet && \
  apt-get remove -y golang git make gcc libc-dev && apt autoremove -y && apt-get clean && \
  rm -rf /go-ContractNet

EXPOSE 8580
EXPOSE 30380

ENTRYPOINT ["/gContractNet"]
